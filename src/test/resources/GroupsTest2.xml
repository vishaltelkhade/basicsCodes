<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<!-- THIS META GROUP (GROUP OF GROUPS) METHOD AT TEST LEVEL-->
<suite name="GroupsSuite">
	<test name="GroupsTest">
<groups>
		<define name="weeklybuild">            <!-- META GROUP-->
			<include name="smoke" />           <!-- REGULAR GROUP-->
			<include name="regression" />      <!-- REGULAR GROUP-->
		</define>
		<define name="Dailybuild">             <!-- META GROUP-->
			<include name="smoke" />           <!-- REGULAR GROUP-->
			<include name="functional" />      <!-- REGULAR GROUP-->
			<include name="sanity" />          <!-- REGULAR GROUP-->
			<include name="regression" />      <!-- REGULAR GROUP-->
		</define>
		<run>
			<include name="Dailybuild" /> <!-- TO RUN WE HAVE TO CALLED META GROUP NAME AT INCLUDE TAG-->
		</run>
	</groups>
		<classes>
			<class name="groupTest.GroupTest1" />
			<class name="groupTest.GroupTest2" />
		</classes>
	</test>
</suite> 